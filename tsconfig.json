{
    "compilerOptions": {
      "target": "es2017",
      "module": "esNext",
      "moduleResolution": "node",
      "lib": ["esnext.array", "esnext", "es2017", "dom"],
      "declaration": false,
      "sourceMap": true,
      "inlineSources": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "experimentalDecorators": true,
      "outDir": "./dist"
    },
    
    "include": [
      "./*.ts"
    ],
    "exclude": []
  }